<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/competition_name"
            android:textStyle="bold"
            android:text="LA CHAMPIONS LIGA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stadium_name"
            android:text="old trafford"
            app:layout_constraintTop_toBottomOf="@id/competition_name"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/competition_date"
            android:text="a really long date"
            app:layout_constraintTop_toBottomOf="@id/competition_name"
            app:layout_constraintStart_toEndOf="@id/stadium_name"

    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/home_team"
            android:text="Man. United"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stadium_name"

    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_team"
            android:layout_margin="20dp"
            android:text="CHELSEA"
            app:layout_constraintTop_toBottomOf="@id/home_team"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_number"
            android:text="15"
            android:textSize="35dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/stadium_name"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_day"
            android:text="TUE"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/date_number"
            app:layout_constraintStart_toStartOf="@id/date_number"
            app:layout_constraintEnd_toEndOf="@id/date_number"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postponed_label"
            android:text="postponed"
            android:textColor="#FF00FF"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>